algoritmo "EX-3-CAP-5"

var
KM_LITRO: INTEIRO
TOTAL_KM: INTEIRO
TOTAL_LITROS: INTEIRO

inicio
TOTAL_LITROS <- 50

ESCREVAL("QUANTOS KM SEU CARRO PERCORRE POR LITRO?")
LEIA(KM_LITRO)

TOTAL_KM <- KM_LITRO * TOTAL_LITROS

ESCREVAL("SEU CARRO IRÁ PERCORRER ", TOTAL_KM, " KM COM ", TOTAL_LITROS,"L DE COMBUSTIVEL")





fimalgoritmo
