algoritmo "EX-2-CAP-5"

var
ANO_NASCIMENTO: INTEIRO
ANO_ATUAL: INTEIRO
IDADE: INTEIRO

inicio
// VARIAVEL ISOLADA PARA FACILITAR A MANUTENÇÃO NOS PROXIMOS ANOS
ANO_ATUAL <- 2021


ESCREVAL("DIGITE O ANO QUE VOCE NASCEU:")
LEIA(ANO_NASCIMENTO)

// CALCULA A IDADE DO USUARIO
IDADE <- ANO_ATUAL - ANO_NASCIMENTO

ESCREVAL("A SUA IDADE É: ", IDADE, " ANOS")



fimalgoritmo
