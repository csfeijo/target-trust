algoritmo "EX-4-CAP-5"

var
CARGA_HORARIA: INTEIRO
SALARIO_MENSAL: REAL
VALOR_HORA: REAL

inicio

ESCREVAL("INFORME A CARGA HORARIA:")
LEIA(CARGA_HORARIA)

ESCREVAL("INFORME O SALÁRIO:")
LEIA(SALARIO_MENSAL)

// CALCULO
VALOR_HORA <- SALARIO_MENSAL / CARGA_HORARIA

// A ESTRUTURA :8:2 REALIZA NO VISUALG O ARREDONDAMENTO DO NUMERO PARA DUAS
// CASAS DECIMAIS
ESCREVAL("VOCE RECEBE: ", VALOR_HORA:8:2, " POR HR TRABALHADA")




fimalgoritmo
