algoritmo "EX-1-CAP-5"

var
NUM1: REAL
NUM2: REAL
SOMA: REAL
SUBTRACAO: REAL
DIVISAO: REAL
MULTIPLICACAO: REAL


inicio


ESCREVAL("DIGITE O PRIMEIRO NUMERO")
LEIA(NUM1)

ESCREVAL("DIGITE O SEGUNDO NUMERO")
LEIA(NUM2)

SOMA <- NUM1 + NUM2
ESCREVAL("SOMA:", SOMA)

SUBTRACAO <- NUM1 - NUM2
ESCREVAL("SUBTRAÇÃO:", SUBTRACAO)

MULTIPLICACAO <- NUM1 * NUM2
ESCREVAL("MULTIPLICAÇÃO:", MULTIPLICACAO)

DIVISAO <- NUM1 / NUM2
ESCREVAL("DIVISÃO", DIVISAO)












fimalgoritmo
