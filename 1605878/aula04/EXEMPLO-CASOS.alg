algoritmo "EXEMPLO-CASOS"

var
VEICULO: CARACTERE

inicio

ESCREVAL("DIGITE VEICULO")
LEIA(VEICULO)

// ESCOLHA: É USADA SOMENTE PARA VALIDAR VALORES IGUAIS - LISTA
// NUNCA USADA PARA VALIDAR INTERVALOS NUMERICOS POIS DÁ MUITO TRABALHO
ESCOLHA(VEICULO)
   CASO "GOL", "KOMBI", "PARATI", "FUSCA"
      ESCREVAL("É VW")
   CASO "PRISMA", "CELTA", "CAMARO"
      ESCREVAL("É GM")
   OUTROCASO
      ESCREVAL("NÃO ENCONTRADO!")
FIMESCOLHA
















fimalgoritmo
