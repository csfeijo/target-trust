ALGORITMO "EX-MICHELE"
var
USUARIO: CARACTERE
inicio

REPITA
   SE (USUARIO <> "ADMIN") E (USUARIO <> "") ENTAO
      LIMPATELA
      ESCREVAL ("USUARIO INVALIDO")
   FIMSE

   ESCREVAL ("DIGITE USUARIO")
   LEIA (USUARIO)
ATE (USUARIO = "ADMIN")

//SO OCORRE DEPOIS QUE SAIMOS DO LOOP

LIMPATELA
ESCREVAL ("----BEM VINDO AO SISTEMA----")

fimalgoritmo
