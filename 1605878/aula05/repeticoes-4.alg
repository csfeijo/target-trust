algoritmo "REPETICOES-4"

var
USUARIO: CARACTERE

inicio


REPITA
   SE (USUARIO <> "ADMIN") E (USUARIO <> "") ENTAO
      LIMPATELA
      ESCREVAL("USUARIO INVALIDO")

      // WORKAROUND (GAMBIARRA) PARA MOSTRAR POR UM TEMPO A MENSAGEM DE ERRO
      // TIMER 500
   FIMSE

   ESCREVAL("DIGITE USUARIO")
   LEIA(USUARIO)
ATE (USUARIO = "ADMIN")

// SÓ OCORRE DEPOIS QUE NOS LIVRARMOS DO LOOP DO REPITA
LIMPATELA
ESCREVAL("==== BEM VINDO AO SISTEMA ====")


fimalgoritmo
