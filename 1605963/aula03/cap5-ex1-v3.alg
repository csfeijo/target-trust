algoritmo "CAP5-EX1-V3"

var
NUM1: REAL
NUM2: REAL
RESULTADO: REAL

inicio

ESCREVAL("DIGITE O PRIMEIRO NUMERO")
LEIA(NUM1)

ESCREVAL("DIGITE O SEGUNDO NUMERO")
LEIA(NUM2)

RESULTADO <- NUM1 + NUM2
ESCREVAL("SOMA:", RESULTADO)

RESULTADO <- NUM1 - NUM2
ESCREVAL("SUBTRAÇÃO:", RESULTADO)

RESULTADO <- NUM1 * NUM2
ESCREVAL("MULTIPLICAÇÃO:", RESULTADO)

RESULTADO <- NUM1 / NUM2
ESCREVAL("DIVISÃO:", RESULTADO)


fimalgoritmo
