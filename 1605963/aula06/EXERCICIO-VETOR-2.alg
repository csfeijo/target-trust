algoritmo "EXERCICIO-VETOR-2"

var
NOTAS: VETOR[0..4] DE REAL
CONT: INTEIRO
SOMA: REAL
MEDIA: REAL

inicio

PARA CONT DE 0 ATE 4 FACA

  ESCREVAL("DIGITE A NOTA:")
  LEIA(NOTAS[CONT])
  
  SOMA <- SOMA + NOTAS[CONT]

FIMPARA

MEDIA <- SOMA / 5
ESCREVAL("A MÉDIA DAS NOTAS É:", MEDIA)

SE (MEDIA >= 7) ENTAO
   ESCREVAL("VOCE FOI APROVADO!")
SENAO
   ESCREVAL("VOCE FOI REPROVADO!")
FIMSE


fimalgoritmo
