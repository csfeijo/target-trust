algoritmo "EX-FUNCOES-2"

var
N1: INTEIRO
N2: INTEIRO
N3: INTEIRO


FUNCAO CALCULA_MEDIA(NUM1, NUM2, NUM3: INTEIRO):REAL
INICIO
  RETORNE (NUM1 + NUM2 + NUM3) / 3
FIMFUNCAO


inicio

ESCREVAL("DIGITE O NUMERO 1")
LEIA(N1)

ESCREVAL("DIGITE O NUMERO 2")
LEIA(N2)

ESCREVAL("DIGITE O NUMERO 3")
LEIA(N3)

//ESCREVAL( CALCULA_MEDIA(10, 5, 3) )
ESCREVAL( CALCULA_MEDIA(N1, N2, N3) )

fimalgoritmo
