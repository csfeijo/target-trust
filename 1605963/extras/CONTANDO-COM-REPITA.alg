algoritmo "EX-CONTANDO-REPITA"

var
CONT: INTEIRO
MAXIMO: INTEIRO

inicio

ESCREVAL("ATÉ QUANTO DEVE CONTAR?")
LEIA(MAXIMO)

// PRECISA INICIALIZAR O CONT EM 1 (NO PARA ISSO É AUTOMATICO)
CONT <- 1
REPITA
   ESCREVAL("CONTANDO ", CONT)

   // PRECISA INCREMENTAR POIS O REPITA NÃO FAZ ISSO SOZINHO COMO O "PARA"
   CONT <- CONT + 1

ATE (CONT > 10)

fimalgoritmo
