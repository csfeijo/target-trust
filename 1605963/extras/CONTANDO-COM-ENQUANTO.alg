algoritmo "EX-CONTANDO-ENQUANTO"

var
CONT: INTEIRO
MAXIMO: INTEIRO

inicio

ESCREVAL("ATÉ QUANTO DEVE CONTAR?")
LEIA(MAXIMO)

// PRECISA INICIALIZAR O CONT EM 1 (NO PARA ISSO É AUTOMATICO)
CONT <- 1
ENQUANTO (CONT <= MAXIMO) FACA
   ESCREVAL("CONTANDO ", CONT)
   
   // PRECISA INCREMENTAR POIS O ENQUANTO NÃO FAZ ISSO SOZINHO COMO O "PARA"
   CONT <- CONT + 1
   
FIMENQUANTO

fimalgoritmo
