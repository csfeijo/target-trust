algoritmo "CAP8-EX-4"


var
IDADE: INTEIRO
CONT: INTEIRO
SOMA: INTEIRO
MAX: INTEIRO
MEDIA: REAL

inicio
MAX <- 5

CONT <- 1
ENQUANTO (CONT <= MAX) FACA
   ESCREVAL("DIGITE A IDADE DA PESSOA:")
   LEIA(IDADE)
   
   SOMA <- SOMA + IDADE
   
   CONT <- CONT + 1
FIMENQUANTO

LIMPATELA

ESCREVAL("A SOMA DAS IDADES É: ", SOMA)

MEDIA <- SOMA / MAX

ESCREVAL("A MEDIA DAS IDADES É: ", MEDIA)


fimalgoritmo
